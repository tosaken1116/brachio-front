{
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "wrangler pages dev dist",
    "new:ui": "scaffdog generate ui",
    "new:model": "scaffdog generate model",
    "new:page": "scaffdog generate page",
    "lint:biome": "biome lint .",
    "lint": "run-p lint:*",
    "format:biome-import": "biome check --apply --organize-imports-enabled=false --no-errors-on-unmatched .",
    "format:biome-apply-unsafe": "biome check --apply-unsafe --no-errors-on-unmatched .",
    "format:biome-format": "biome format --write --no-errors-on-unmatched .",
    "format:biome-apply": "biome lint --apply --no-errors-on-unmatched .",
    "format": "run-s format:*",
    "deploy": "$npm_execpath run build && wrangler pages deploy dist"
  },
  "dependencies": {
    "hono": "^4.0.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.5.3",
    "@cloudflare/workers-types": "^4.20240129.0",
    "@hono/vite-cloudflare-pages": "^0.2.4",
    "@hono/vite-dev-server": "^0.5.0",
    "npm-run-all": "^4.1.5",
    "scaffdog": "^3.0.0",
    "vite": "^5.0.12",
    "wrangler": "^3.25.0"
  }
}
